@import '_settings'
@import 'jeet'

/*tooltip*/
.tooltip
    display:none;
    position:absolute;
    border:1px solid #333;
    background-color:#161616;
    border-radius:5px;
    padding:10px;
    color:#fff;
    font-size:12px Arial;
    z-index:999;

body
    background-color #FAFAFA
    &.login
        background url(../images/background.png)

//Formularios
.required
    color: #B90000

.form-content
    cf()
    h3
        clear both
    ul
        display block
        clear both
        list-style none
        margin 0
        padding 0
        margin-bottom 1em
        li
            float left
            width 50%
    input[type=submit]
        display block
        float right

//Algunas ayudas
.align-right
    margin-left 1em
    float right
.align-center
    width 100%
    text-align center
    

// tablas
.table-options
    border-right 1px solid #CCC
    border-left 1px solid #CCC
    border-top 1px solid #CCC
    margin 0 auto
    margin-top 1.5em
    padding .2em  1em 1em 1em
    -webkit-border-radius 5px 5px 0 0
    -moz-border-radius 5px 5px 0 0
    -ms-border-radius 5px 5px 0 0
    -o-border-radius 5px 5px 0 0
    border-radius 5px 5px 0 0
    width 90%
    h6
        font-size: 0.8em;
        font-weight: bold;
        position: relative;
        top: -18px;
        background-color: white;
        display: inline;
        border: 1px solid #CCC;
        padding: 3px;

header
    position fixed
    width 100%
    height 62px
    z-index 2
    background-color #009bd1
    & > div, & > nav
        col(1/3)
    .logo
        padding 10px 36px;
    //Menu Usuario
    nav.user-menu > *
        display inline
    #clock
        padding-left: 25px;
        width: 100px;
        background: transparent url("../images/menubar/reloj.png") no-repeat left center;
        background-size: 20px 20px;
        color: #fff;
        font-size: 8pt;
        position: absolute;
        top: 1.5em;
        right: 20px;
        text-align: right;

//Menu Usuario
nav.user-menu
    ul
        list-style none
        li
            a, a:hover, a:active, a:visited
                color hsl(240,1%,32%)
            float left
            border-right 1px solid hsl(240,1%,32%)
            padding 1em 10px 1em 32px
            margin 8px
            color hsl(240,1%,32%)
            h5
                padding 0
                margin 0
            &.session-user
                background url("../images/menubar/empleado.png") no-repeat
                background-size 26px
            &.logout
                background url("../images/menubar/salir.png") no-repeat
                background-size 26px
            &:last-child
                border-right none

//Menu Principal
nav.main-menu
    position:fixed;
    top:61px;
    left:0;
    width:180px;
    z-index:1;
    height:100%;
    background-color:hsl(0,0%,100%);
    -webkit-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    -moz-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    font-weight:bold;
    a, a:active, a:visited
        color:#000;
        text-decoration:none !important;
        font-weight:bold;
        font-size:1.2em !important;
    ul
        padding 0
        margin 0
    > ul
        > li
            position:relative;
            float:none;
            min-height 54px
            border-bottom:1px solid hsl(0,0%,80%);
            font-size:8pt;
            cursor:pointer;
            &:hover
                background:-webkit-gradient(linear,left top,left bottom,color-stop(0.05,hsl(0,0%,93%)),color-stop(1,hsl(0,0%,87%)));
                background:-moz-linear-gradient(center top,hsl(0,0%,93%) 5%,hsl(0,0%,87%) 100%);
                -webkit-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
                -moz-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
                box-shadow:-1px -1px 5px hsl(0,0%,80%) inset;
            > ul
                display table-row
                &:hover li:after
                    position:absolute;
                    left:100%;
                    top:50%;
                    margin-top:-12px;
                    width:0;
                    height:0;
                    border-top:12px solid transparent;
                    border-bottom:12px solid transparent;
                    border-left:12px solid hsl(0,0%,78%);
                    content:'';
                > li
                    display:table-cell;
                    margin:0 5px 0 0;
                    vertical-align:middle;
                    text-align:center;
                    text-align:left;
                    padding .5em
                    &:first-child
                        width:54px;

//Contenedor Principal
#wrapper
    center(1060px);
    margin-top 58px
    margin-right 58px
    margin-left 235px
    section
        // padding 1em
        margin-top 1em
        background-color white
        border-radius 5px
        padding 1em
        & > h1
            color:#FFF;
            font-weight:bold
            font-size:3em
            text-shadow:-1px -1px 0 #000,1px -1px 0 #000,-1px 1px 0 #000,1px 1px 0 #000
        &.login-form
            center(350px)
            text-align center
            background-color transparent
            .box-login
                margin: 20px auto 0 auto;
                border: 1px solid #CCC;
                -webkit-border-radius: 5px;
                -moz-border-radius: 5px;
                border-radius: 5px;
                background-color: #FFF;
                -webkit-box-shadow: 0 0 10px #000;
                box-shadow: 0 0 10px #000;
                padding 1.5em
                p
                    font-size 0.8em
                    font-weight bold
                table
                    td.icon-user
                        width: 30px;
                        border-top-left-radius: 5px;
                        border-bottom-left-radius: 5px;
                        background-color: #f4f4f4;
                        background-image: url('../images/user.png');
                        background-position: center;
                        background-repeat: no-repeat;
                        webkit-top-left-radius: 5px;
                        -webkit-top-left-radius: 5px;
                    td.icon-lock
                        width: 30px;
                        border-top-left-radius: 5px;
                        border-bottom-left-radius: 5px;
                        background-color: #f4f4f4;
                        background-image: url('../images/lock.png');
                        background-position: center;
                        background-repeat: no-repeat;
                        webkit-top-left-radius: 5px;
                        -webkit-top-left-radius: 5px;
                input
                    font-size 19px
                    font-weight bold
                    height 2em
                    border 1px solid #f4f4f4
        &.main
            a,a:active,a:hover
                display block
                color white
                width 100%
                height 100%
            ul
                cf()
                padding 0
                list-style none
                li
                    col(1/2, cycle:2)
                    height 200px
                    float left
                    background-color #009bd1
                    text-align center
                    font-size 2em

                    -webkit-transition 1s ease all
                    -o-transition 1s ease all
                    transition 1s ease all
                    //Perzonalizar notificaciones ej: &.notification-[nombre]
                    &:hover
                        background-color #d43f3a
                    span
                        font-size 3em
                    p
                        text-align: center;
                        font-size: 14px;
        &.process-requests
            #num-request
                width 30px
                height @width
                padding .5em
                font-weight bold
                background-color #000
                color #FFF
                -webkit-border-radius 50%
                -moz-border-radius 50%
                -ms-border-radius 50%
                -o-border-radius 50%
                border-radius 50%
                // animation banderitor 10s infinite ease
                // -webkit-animation banderitor 10s infinite ease
                // -moz-animation banderitor 10s infinite ease
            .process-request
                border 1px solid #CCC
                margin 3em 0
                h6
                    font-size: 0.8em;
                    font-weight: bold;
                    position: relative;
                    top: -18px;
                    left 1em
                    background-color: white;
                    display: inline;
                    border: 1px solid #CCC;
                    padding: 3px;
                table.tablesorter
                    width 100%
                    border none
                    margin-bottom 2em
        &.manage-documents
            .table-options
                border-bottom 1px solid #CCC
        &.request
            #stundet-info
                background-color: #47A447;
                padding: 0.6em;
                border 2px solid #5CB85C;
                border-radius: 5px;
                box-shadow: 1px 1px 3px #000;
                font-weight: bold;
                span
                    font-weight normal

//Clases especiales contenedor    
#wrapper.center
    center(1060px);
    text-align center
    margin-right auto
    margin-left auto

footer
    width 100%
    position:fixed;
    bottom:0;
    padding:1.5em 0;
    border-top:1px solid #CCC;
    background-color:#f4f4f4;
    color:#000;
    text-align:center;
    font-size:12px;

//Animaciones
@keyframes banderitor
    33%
        background-color:yellow
    66%
        background-color:blue
    100%
        background-color:red

//Media Screens
@media screen and (max-width:1100px)
    #wrapper
        margin-left 155px
        margin-right 38px
    nav.main-menu
        width:120px
        a,a:active,a:visited
            font-weight:normal;
            font-size:.9em !important;
        &> ul > li
            height:100%;
            &>ul>li:first-child
                width 32px
 