@import '_settings'
@import 'jeet'

footer
    text-align center

a, a:hover, a:visited, a:active
    text-decoration none

/*tooltip*/
.tooltip
    display:none;
    position:absolute;
    border:1px solid #333;
    background-color:#161616;
    border-radius:5px;
    padding:10px;
    color:#fff;
    font-size:12px Arial;
    z-index:999;

body
    background-color #FAFAFA
    &.login
        background url(../images/background.png)

//Formularios
.required
    color: #B90000

.form-content
    cf()
    h3
        clear both
    ul
        display block
        clear both
        list-style none
        margin 0
        padding 0
        li
            float left
    input[type=submit]
        display block
        float right

header
    position fixed
    width 100%
    height 62px
    z-index 2
    background-color #009bd1
    & > div, & > nav
        col(1/3)
    #clock
        padding-left: 25px;
        width: 100px;
        background: transparent url("../images/menubar/reloj.png") no-repeat left center;
        background-size: 20px 20px;
        color: #fff;
        font-size: 8pt;
        position: absolute;
        top: 1.5em;
        right: 20px;
        text-align: right;

//Menu Usuario
nav.user-menu > *
    display inline
    float left

//Menu Principal
nav.main-menu
    position:fixed;
    top:61px;
    left:0;
    width:180px;
    z-index:1;
    height:100%;
    background-color:hsl(0,0%,100%);
    -webkit-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    -moz-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    font-weight:bold;
    a, a:active, a:visited
        color:#000;
        text-decoration:none !important;
        font-weight:bold;
        font-size:1.2em !important;
    ul
        padding 0
        margin 0
    > ul
        > li
            position:relative;
            float:none;
            min-height 54px
            border-bottom:1px solid hsl(0,0%,80%);
            font-size:8pt;
            cursor:pointer;
            &:hover
                background:-webkit-gradient(linear,left top,left bottom,color-stop(0.05,hsl(0,0%,93%)),color-stop(1,hsl(0,0%,87%)));
                background:-moz-linear-gradient(center top,hsl(0,0%,93%) 5%,hsl(0,0%,87%) 100%);
                -webkit-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
                -moz-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
                box-shadow:-1px -1px 5px hsl(0,0%,80%) inset;
            > ul
                display table-row
                &:hover li:after
                    position:absolute;
                    left:100%;
                    top:50%;
                    margin-top:-12px;
                    width:0;
                    height:0;
                    border-top:12px solid transparent;
                    border-bottom:12px solid transparent;
                    border-left:12px solid hsl(0,0%,78%);
                    content:'';
                > li
                    display:table-cell;
                    margin:0 5px 0 0;
                    vertical-align:middle;
                    text-align:center;
                    text-align:left;
                    padding .5em
                    &:first-child
                        width:54px;

//Contenedor Principal
#wrapper
    center(1060px);
    margin-top 58px
    margin-right 58px
    margin-left 235px
    section
        // padding 1em
        margin-top 1em
        background-color white
        border 1px solid #CCC
        -webkit-border-radius 5px
        -moz-border-radius 5px
        border-radius 5px
        & > h1
            color:#FFF;
            font-weight:bold
            font-size:3em
            text-shadow:-1px -1px 0 #000,1px -1px 0 #000,-1px 1px 0 #000,1px 1px 0 #000
        &.login-form
            center(500px)
            text-align center
        &.main
            a,a:active,a:hover
                display block
                color white
                width 100%
                height 100%
            ul
                cf()
                padding 0
                list-style none
            li
                col(1/3, cycle:3)
                height 200px
                float left
                background-color #009bd1
                text-align center
                font-size 2em
                span
                    font-size 3em   
        
footer
    position:fixed;
    left:155px;
    right:0;
    bottom:0;
    padding:1.5em 0;
    min-width:918px;
    border-top:1px solid #CCC;
    background-color:#f4f4f4;
    color:#000;
    text-align:center;
    font-size:12px;         


//Media Screens
@media screen and (max-width:1100px)
    #wrapper
        margin-left 155px
        margin-right 38px
    nav.main-menu
        width:120px
        a,a:active,a:visited
            font-weight:normal;
            font-size:.9em !important;
        &> ul > li
            height:100%;
            &>ul>li:first-child
                width 32px
 