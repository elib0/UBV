@import 'reset.css'
@import '_settings'
@import 'jeet'

footer
    text-align center

a, a:hover, a:visited, a:active
    text-decoration none

//Mensajes de alerta
.message
    padding: 20px 20px 20px 40px
    margin-bottom: 15px
    border-style: solid
    border-width: 1px
    background-position: 10px 10px
    background-repeat: no-repeat
    &.warning
        background-color: #f8fad5
        border-color: #e5d35b
    &.error
        background-color: #f5dfdf;
        border-color: #ce9e9e;
    &.info
        background-color: #dfeff5;
        border-color: #9ebcce;
    &.success
        background-color: #e8f5df;
        border-color: #9ece9e;

//Contenedor Principal
#wrapper
    center(900px);
    margin-top 58px
    margin-left 235px

//Formularios
form > div.form-content
    h3
        clear both
    ul
        display block
        clear both
        list-style none
        margin 0
        padding 0
        li
            float left

header
    background-color white
    position fixed
    width 100%
    height 62px
    z-index 2

//Menu Usuario
nav.user-menu > *
    display inline
    float left


//Menu Principal
nav.main-menu
    position:fixed;
    top:55px;
    left:0;
    width:180px;
    z-index:1;
    height:100%;
    background-color:hsl(0,0%,100%);
    -webkit-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    -moz-box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    box-shadow:-1px 0px 8px hsl(0,0%,60%) inset;
    font-weight:bold;
    ul
        padding 0
    > ul
        > li
            position:relative;
            float:none;
            height:100%;
            border-bottom:1px solid hsl(0,0%,80%);
            font-size:8pt;
            cursor:pointer;
                
        
            

